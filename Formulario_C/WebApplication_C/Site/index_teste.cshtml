@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/CSS/style.css">
    <title>Meu primeiro CSHTML</title>
</head>
<body>
    <div>
        <h1>Bem vindo ao meu site </h1>
        <p>Realize o cadastro para seguir em frente:</p>
        <form method="post" action="~/Site/mostrar.cshtml">
            <label>Nome:</label>
            <input type="text" name="nome" />
            <br />
            <label>Senha:</label>
            <input type="password" name="senha" />
            <br />
            <label>Data:</label>
            <input type="date" name="nascimento" />
            <br />
            <label>file:</label>
            <input type="file" name="file" />
            <br />
            <label>image:</label>
            <input type="image" name="image" />
            <br />
            <label>range:</label>
            <input type="range" min="0" max="10" name="range" />
            <br />
            <label>search:</label>
            <input type="search" name="search" />
            <br />
            <label>tel:</label>
            <input type="tel" name="tel" pattern="([0-9]{2})[0-9]{5}-[0-9]{4}" placeholder="(xx)12345-6789"/>
            <br />
            <label>time:</label>
            <input type="time" name="time" />
            <br />
            <label>url:</label>
            <input type="url" name="url" />
            <br />
            <button type="submit">Cadastrar</button>
        </form>

        <p>By Maurício Cerqueira</p>
    </div>
</body>
</html>