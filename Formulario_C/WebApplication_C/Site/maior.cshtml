@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" href="~/CSS/style.css">
    <title>Meu primeiro CSHTML</title>
</head>
<body>
    <div>
        <h1>Descubra qual o maior número </h1>
        <p>Entre com dois números:</p>
        <form method="post" action="~/Site/mostrar_maior.cshtml">
            @for (int i = 1; i <= 10; i++)
                {
                    <label>Número @i:</label>
                    <input type="number" name="num@(i)">
<br />      
                }
            <button type="submit">Verificar</button>
        </form>

        <p>By Maurício Cerqueira</p>
    </div>
</body>
</html>